<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.dyuapp.activity.MapDistributionShowActivity">


    <com.baidu.mapapi.map.MapView
        android:id="@+id/distribution_show_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"></com.baidu.mapapi.map.MapView>


    <ImageView
        android:id="@+id/distribution_show_img_map_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x24"
        android:src="@mipmap/map_current" />

    <LinearLayout
        android:id="@+id/distribution_show_ll_charge_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginTop="@dimen/x120"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:padding="@dimen/x12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x10"
                android:background="@drawable/bg_blue_round_angle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="免费"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x10"
                android:background="@drawable/bg_red_round_angle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="收费"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
