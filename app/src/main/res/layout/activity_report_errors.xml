<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f9f9f9"
    android:orientation="vertical"
    tools:context="com.project.dyuapp.activity.ReportErrorsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:gravity="center"
        android:minHeight="@dimen/x96"
        android:padding="@dimen/x24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报错类型"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_32px" />

        <LinearLayout
            android:id="@+id/report_errors_ll_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/report_errors_tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x24"
                android:layout_weight="1"
                android:background="@color/c_ffffff"
                android:hint="请选择报错类型"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_999999"
                android:textSize="@dimen/tv_32px" />

            <TextView
                android:id="@+id/report_errors_tv_site_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x24"
                android:background="@color/c_ffffff"
                android:drawableRight="@mipmap/more_right"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_999999"
                android:textSize="@dimen/tv_32px" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/report_errors_edt_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x24"
        android:background="@color/c_ffffff"
        android:gravity="center|top|left"
        android:hint="您发现的问题"
        android:maxLength="200"
        android:minLines="4"
        android:padding="@dimen/x24"
        android:textColorHint="@color/c_999999"
        android:textSize="@dimen/tv_32px" />


    <TextView
        android:id="@+id/report_errors_tv_submit"
        style="@style/btn_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x98"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:layout_marginTop="@dimen/x48"
        android:text="提交" />


</LinearLayout>
