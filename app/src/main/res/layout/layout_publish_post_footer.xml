<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--尾-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96">

        <TextView
            android:id="@+id/publish_post_tv_add_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_ffffff"
            android:gravity="center"
            android:text="添加文字"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_28px" />

        <TextView
            android:id="@+id/publish_post_tv_add_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_ffffff"
            android:gravity="center"
            android:text="添加图片"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_28px" />

        <TextView
            android:id="@+id/publish_post_tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_ffffff"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_28px" />
    </LinearLayout>
    <!--地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x24">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x24"
            android:src="@mipmap/issue_site" />

        <TextView
            android:id="@+id/publish_post_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/c_999999"
            android:textSize="@dimen/tv_26px" />

    </LinearLayout>
</LinearLayout>