<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x24">

        <CheckBox
            android:id="@+id/item_select_address_chb_default"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/x32"
            android:background="@drawable/cbx_select_selector"
            android:layout_gravity="center"
            android:button="@null"
            android:focusable="false"
            android:clickable="false"/>
        <!--<ImageView
            android:id="@+id/item_select_address_chb_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/check_button_select" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_select_address_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="苏向远"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_28px" />

                <TextView
                    android:id="@+id/item_select_address_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x48"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="15012345678"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_select_address_tv_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/x8"
                android:maxLines="2"
                android:text="河北省 石家庄市 裕华区 槐安路与富强大街交叉口西南角北大科技园 X楼XXX"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>