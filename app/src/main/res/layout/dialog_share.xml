<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:drawableLeft="@mipmap/title_share"
        android:drawablePadding="@dimen/x24"
        android:gravity="center_vertical"
        android:padding="@dimen/x24"
        android:text="分享至"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/tv_30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_tv_sina"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x18"
            android:drawableTop="@mipmap/share_weibo"
            android:gravity="center"
            android:paddingBottom="@dimen/x24"
            android:paddingTop="@dimen/x24"
            android:text="新浪微博"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/share_tv_circle"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x18"
            android:drawableTop="@mipmap/share_pengyouquan"
            android:gravity="center"
            android:paddingBottom="@dimen/x24"
            android:paddingTop="@dimen/x24"
            android:text="朋友圈"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px" />

        <TextView
            android:id="@+id/share_tv_qq"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x18"
            android:drawableTop="@mipmap/share_qq"
            android:gravity="center"
            android:paddingBottom="@dimen/x24"
            android:paddingTop="@dimen/x24"
            android:text="QQ好友"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px" />

        <TextView
            android:id="@+id/share_tv_weixin"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x18"
            android:drawableTop="@mipmap/share_weixin"
            android:gravity="center"
            android:paddingBottom="@dimen/x24"
            android:paddingTop="@dimen/x24"
            android:text="微信好友"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x24">


        <TextView
            android:id="@+id/share_tv_qzone"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x18"
            android:drawableTop="@mipmap/share_kongjian"
            android:gravity="center"
            android:paddingBottom="@dimen/x24"
            android:paddingTop="@dimen/x24"
            android:text="QQ空间"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px" />

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>