<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f9f9f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x24"
        android:background="@color/c_ffffff"
        android:minHeight="@dimen/x80"
        android:orientation="horizontal"
        android:padding="@dimen/x24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/what_item_center_shop_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />

            <TextView
                android:id="@+id/item_center_shop_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_center_shop_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:padding="@dimen/x24">

        <ImageView
            android:id="@+id/item_center_shop_img_icon"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x180"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@mipmap/mine_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_center_shop_img_icon"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x24"
            android:layout_toRightOf="@+id/item_center_shop_img_icon"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x24">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_center_shop_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_32px"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_center_shop_tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_999999"
                android:textSize="@dimen/tv_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:orientation="vertical">

                <!--<com.project.dyuapp.myviews.StarBarTouch-->
                    <!--android:id="@+id/item_center_shop_stb_level"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:starCount="4"-->
                    <!--app:starDistance="@dimen/x5"-->
                    <!--app:starEmpty="@mipmap/list_star"-->
                    <!--app:starFill="@mipmap/list_star"-->
                    <!--app:starSize="@dimen/x30" />-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/item_shop_ll_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></LinearLayout>

                <TextView
                    android:id="@+id/item_center_shop_tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x8"
                    android:text=""
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/tv_26px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>