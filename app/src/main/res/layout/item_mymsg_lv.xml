<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/c_ffffff"
    android:padding="@dimen/x24">
    <!--头像-->
    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/mymsg_iv_head"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@mipmap/mine_edit_head"
        app:siShape="@drawable/shape_circle"
        app:siSquare="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x24">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--昵称-->
            <TextView
                android:id="@+id/mymsg_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tv_32px"
                android:textColor="@color/c_333333"
                android:layout_toLeftOf="@+id/mymsg_tv_right"
                android:layout_marginRight="@dimen/x24"/>
            <!--右侧按钮  回复/删除-->
            <TextView
                android:id="@+id/mymsg_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="回复"
                android:textColor="@color/c_269ceb"
                android:textSize="@dimen/tv_28px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <!--时间-->
        <TextView
            android:id="@+id/mymsg_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/tv_24px"
            android:textColor="@color/c_999999"
            android:layout_marginTop="@dimen/x4"/>
        <!--内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/mymsg_iv_img"
                android:layout_width="@dimen/x27"
                android:layout_height="@dimen/x27"
                android:src="@mipmap/mine_message_04praise"
                android:layout_marginRight="@dimen/x16"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/mymsg_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/mymsg_ll_tizi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x64"
            android:orientation="horizontal"
            android:background="@color/c_f0f0f0"
            android:layout_marginTop="@dimen/x24"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/mynmsg_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tv_30px"
                android:textStyle="bold"
                android:textColor="@color/c_269ceb"/>
            <TextView
                android:id="@+id/mymsg_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/x24"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>