<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f9f9f9"
    tools:context="com.project.dyuapp.activity.ShopExchangeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/shop_exchange_rl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_exchange_iv_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x620"
                android:scaleType="fitXY"
                android:src="@mipmap/banner_img"/>

            <TextView
                android:id="@+id/shop_exchange_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x50"
                android:paddingLeft="@dimen/x24"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_30px"
                android:text="商品介绍"/>

            <TextView
                android:id="@+id/shop_exchange_tv_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:paddingLeft="@dimen/x24"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_28px"
                android:text="请相信开发者的专业程度，尽管你可能比他更有才。"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/shop_exchange_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x98"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价："
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px"/>

            <TextView
                android:id="@+id/shop_exchange_tv_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/c_f44e4e"
                android:textSize="@dimen/tv_28px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币"
                android:textColor="@color/c_f44e4e"
                android:textSize="@dimen/tv_28px"/>

        </LinearLayout>

        <TextView
            android:id="@+id/shop_exchange_tv_exchange"
            android:layout_width="@dimen/x240"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@color/c_269ceb"
            android:text="兑换"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/tv_28px"/>

    </RelativeLayout>

</RelativeLayout>
