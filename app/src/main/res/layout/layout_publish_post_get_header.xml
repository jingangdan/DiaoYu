            android:layout_toLeftOf="@+id/publish_get_iv_more"
            android:layout_toRightOf="@+id/publish_get_tv_time"
            android:hint="请选择出钓时间"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_cccccc"
            android:textSize="@dimen/tv_32px" />

        <ImageView
            android:id="@+id/publish_get_iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_right" />
    </RelativeLayout>

