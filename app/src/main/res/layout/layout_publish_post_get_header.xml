            android:textColor="@color/c_666666"
            android:textSize="@dimen/tv_32px" />

        <EditText
            android:id="@+id/publish_get_edt_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="请输入线组，如1.2主线"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_cccccc"
            android:textSize="@dimen/tv_32px" />
    </LinearLayout>

    <TextView style="@style/line" />
    <!--钓竿长度-->
    <RelativeLayout
        android:id="@+id/publish_get_rl_lengh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x24"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/publish_get_tv_lengh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x24"
            android:text="钓竿长度"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/tv_32px" />

        <TextView
            android:id="@+id/publish_get_tv_lengh_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
