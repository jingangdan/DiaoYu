<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_video_item_ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x24"
        android:orientation="horizontal"
        android:padding="@dimen/x24">

        <TextView
            android:id="@+id/home_video_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_32px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_video_item_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x8"
            android:drawableRight="@mipmap/more_right"
            android:text="查看全部"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/tv_28px" />
    </LinearLayout>

    <com.project.dyuapp.myviews.GridViewForScrollView
        android:id="@+id/home_video_item_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@null"
        android:numColumns="2"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12"
        android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>

</LinearLayout>