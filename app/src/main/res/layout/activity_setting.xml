<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_f9f9f9"
    tools:context="com.project.dyuapp.activity.SettingActivity">
    
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/setting_rl_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/x24"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="扫码加钓友"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right" />

    </RelativeLayout>

    <TextView android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0"
        android:visibility="gone"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/setting_rl_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的二维码"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/x24"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right" />

    </RelativeLayout>

    <TextView android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0"
        android:visibility="gone"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/setting_rl_agreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="服务协议"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right" />

    </RelativeLayout>

    <TextView android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0"/>

    <RelativeLayout
        android:id="@+id/setting_rl_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="联系客服"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right" />

    </RelativeLayout>

    <TextView android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0"/>

    <RelativeLayout
        android:id="@+id/setting_rl_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="分享"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right" />

    </RelativeLayout>

    <TextView
        android:id="@+id/setting_tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:layout_marginTop="@dimen/x72"
        android:text="退出登录"
        android:background="@color/c_ffffff"
        android:gravity="center"
        android:textColor="@color/c_269ceb"
        android:textSize="@dimen/tv_28px"/>

</LinearLayout>
