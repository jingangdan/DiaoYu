<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_screen_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/c_f9f9f9"
    android:orientation="vertical"
    tools:context="com.project.dyuapp.activity.HomeFishingPlaceActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true" />

        <include
            layout="@layout/view_title"
            android:background="@color/c_269ceb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x88"
            android:background="@color/c_ffffff"
            android:minHeight="@dimen/x96"
            android:padding="@dimen/x23">

            <TextView
                android:id="@+id/fishing_place_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="离我最近"
                android:textColor="@color/c_269ceb"
                android:textSize="@dimen/tv_28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fishing_place_tv_comprehensive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="人气最多"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/fishing_place_ll_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="筛选"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_28px"
                    android:textStyle="bold" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:src="@mipmap/store_card_filter" />
            </LinearLayout>
        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/fishing_place_plv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x208"
            android:divider="@null"
            android:scrollbars="none">

        </com.handmark.pulltorefresh.library.PullToRefreshListView>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/drawer_screen_place_fl_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/c_ffffff"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_269ceb"
                android:minHeight="@dimen/x88"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="筛选"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/tv_32px"
                    android:textStyle="bold" />

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/c_ffffff"
                        android:orientation="vertical"
                        android:padding="@dimen/x24">

                        <LinearLayout
                            android:id="@+id/drawer_screen_place_ll_select_place"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="区域"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/tv_32px"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/drawer_screen_place_tv_place"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/x23"
                                android:drawableRight="@mipmap/more_right"
                                android:ellipsize="end"
                                android:gravity="right|center"
                                android:singleLine="true"
                                android:text="选择区域"
                                android:textColor="@color/c_999999"
                                android:textSize="@dimen/tv_32px" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x23"
                            android:background="@color/c_ffffff"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="类型"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/tv_32px"
                                android:textStyle="bold" />

                            <com.project.dyuapp.myviews.GridViewForScrollView
                                android:id="@+id/drawer_screen_place_gv_models"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:numColumns="3"
                                android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x23"
                            android:background="@color/c_ffffff"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="收费"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/tv_32px"
                                android:textStyle="bold" />

                            <com.project.dyuapp.myviews.GridViewForScrollView
                                android:id="@+id/drawer_screen_place_gv_cost"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:numColumns="3"
                                android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x23"
                            android:background="@color/c_ffffff"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="渔获帖数"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/tv_32px"
                                android:textStyle="bold" />

                            <com.project.dyuapp.myviews.GridViewForScrollView
                                android:id="@+id/drawer_screen_place_gv_stick"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:numColumns="3"
                                android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x23"
                            android:background="@color/c_ffffff"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="显示方式"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/tv_32px"
                                android:textStyle="bold" />

                            <com.project.dyuapp.myviews.GridViewForScrollView
                                android:id="@+id/drawer_screen_place_gv_show_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:numColumns="3"
                                android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:minHeight="@dimen/x98">

            <TextView
                android:id="@+id/drawer_screen_place_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/c_f9f9f9"
                android:gravity="center"
                android:padding="@dimen/x23"
                android:text="取消"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_32px" />

            <TextView
                android:id="@+id/drawer_screen_place_tv_determine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/c_269ceb"
                android:gravity="center"
                android:padding="@dimen/x23"
                android:text="确定"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/tv_32px" />
        </LinearLayout>
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
