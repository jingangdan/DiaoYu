<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f9f9f9"
    android:orientation="vertical"
    tools:context="com.project.dyuapp.activity.ExchangeInfoActivity">

    <LinearLayout
        android:id="@+id/exchange_info_ll_empty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x48"
            android:src="@mipmap/mine_gold_weizhi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x24"
            android:gravity="center"
            android:text="您还没有收货地址，点击这里添加"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/tv_26px" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/exchange_info_rl_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:background="@color/c_ffffff"
        android:padding="@dimen/x24"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/exchange_info_iv"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exchange_info_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_28px" />

                <TextView
                    android:id="@+id/exchange_info_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x48"
                    android:text=""
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/exchange_info_tv_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:lineSpacingMultiplier="1.2"
                android:text=""
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

        <ImageView
            android:id="@+id/exchange_info_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_right" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:layout_marginTop="@dimen/x24"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="购买数量"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <LinearLayout
            android:layout_width="@dimen/x225"
            android:layout_height="@dimen/x65"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_gray_line_black">

            <TextView
                android:id="@+id/exchange_into_tv_subtract"
                android:layout_width="@dimen/x65"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="―"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px"/>

            <TextView
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/c_333333"/>

            <TextView
                android:id="@+id/exchange_into_tv_count"
                android:layout_width="@dimen/x90"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px"/>

            <TextView
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/c_333333"/>

            <TextView
                android:id="@+id/exchange_into_tv_plus"
                android:layout_width="@dimen/x65"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="＋"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:gravity="center"
        android:background="@color/c_ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <EditText
            android:id="@+id/exchange_into_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_ffffff"
            android:layout_marginLeft="@dimen/x24"
            android:textColorHint="@color/c_cccccc"
            android:textSize="@dimen/tv_28px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:layout_gravity="center"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <TextView
            android:id="@+id/exchange_info_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_gravity="center"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件商品，合计："
            android:layout_gravity="center"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <TextView
            android:id="@+id/exchange_info_tv_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textColor="@color/c_f44e4e"
            android:textSize="@dimen/tv_28px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币"
            android:layout_gravity="center"
            android:textColor="@color/c_f44e4e"
            android:textSize="@dimen/tv_28px"/>

    </LinearLayout>

    <TextView
        android:id="@+id/exchange_info_tv_convert"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:layout_marginTop="@dimen/x80"
        style="@style/btn_blue"
        android:text="兑换"/>

</LinearLayout>
