<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_error_type_tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="@dimen/x24"
            android:text=""
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_32px" />

        <LinearLayout
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:padding="@dimen/x24">

            <ImageView
                android:id="@+id/item_error_img_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:src="@mipmap/check_circle_select" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0" />

</LinearLayout>