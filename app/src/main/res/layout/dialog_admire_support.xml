<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@drawable/bg_gray_round"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x48"
            android:layout_marginTop="@dimen/x48"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的金币："
                android:textColor="@color/c_f44e4e"
                android:textSize="@dimen/tv_30px" />

            <TextView
                android:id="@+id/dialog_support_tv_mygold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x24"
                android:text=""
                android:textColor="@color/c_f44e4e"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@drawable/bg_white_line_gray1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x96"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x24"
                android:paddingRight="@dimen/x24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="金币"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_28px" />

                <EditText
                    android:id="@+id/dialog_support_tv_gold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x24"
                    android:background="@color/c_fdfdfe"
                    android:numeric="integer"
                    android:text=""
                    android:textColor="@color/c_f44e4e"
                    android:textSize="@dimen/tv_28px" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/c_f0f0f0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="理由"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_28px" />

                <EditText
                    android:id="@+id/dialog_support_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:background="@color/c_fdfdfe"
                    android:gravity="top"
                    android:hint="输入打赏理由"
                    android:textColorHint="@color/c_cccccc"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_28px" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_support_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sign_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="通知作者"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_26px" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/c_f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x96"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_support_tv_cancel"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />

            <TextView
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/c_f0f0f0" />

            <TextView
                android:id="@+id/dialog_support_tv_confirm"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/c_269ceb"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>