<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f0f0f0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/address_selector"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_36px" />

        <TextView
            android:id="@+id/pop_address_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/x24"
            android:text="@string/complete"
            android:textColor="@color/c_269ceb"
            android:textSize="@dimen/tv_36px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x32"
        android:paddingRight="@dimen/x32"
        android:paddingTop="@dimen/x24"
        android:paddingBottom="@dimen/x24">

        <com.project.dyuapp.myviews.CycleWheelView
            android:id="@+id/pop_address_cwv_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x24"
            android:layout_weight="1">

        </com.project.dyuapp.myviews.CycleWheelView>

        <com.project.dyuapp.myviews.CycleWheelView
            android:id="@+id/pop_address_cwv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x12"
            android:layout_marginLeft="@dimen/x12"
            android:layout_weight="1">

        </com.project.dyuapp.myviews.CycleWheelView>

        <com.project.dyuapp.myviews.CycleWheelView
            android:id="@+id/pop_address_cwv_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:visibility="gone"
            android:layout_weight="1">

        </com.project.dyuapp.myviews.CycleWheelView>
    </LinearLayout>
</LinearLayout>