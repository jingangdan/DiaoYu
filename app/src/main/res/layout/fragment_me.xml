<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f9f9f9"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_269ceb"
            android:paddingTop="@dimen/x88"
            android:paddingBottom="@dimen/x48"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/me_civ_img"
                android:layout_width="@dimen/x128"
                android:layout_height="@dimen/x128"
                android:layout_marginLeft="@dimen/x48"
                android:src="@mipmap/mine_edit_head"
                app:civ_border_color="@color/c_ffffff"
                app:civ_border_width="@dimen/x4" />

            <RelativeLayout
                android:id="@+id/me_rl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/me_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/c_ffffff"
                            android:textSize="@dimen/tv_32px" />

                        <TextView
                            android:id="@+id/me_tv_grade"
                            style="@style/grade"
                            android:layout_marginLeft="@dimen/x20"
                            android:text="Lv.0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="金币:"
                            android:textColor="@color/c_ffffff"
                            android:textSize="@dimen/tv_26px" />

                        <TextView
                            android:id="@+id/me_tv_gold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x8"
                            android:text="0"
                            android:textColor="@color/c_ffffff"
                            android:textSize="@dimen/tv_26px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x24"
                            android:text="积分:"
                            android:textColor="@color/c_ffffff"
                            android:textSize="@dimen/tv_26px" />

                        <TextView
                            android:id="@+id/me_tv_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x8"
                            android:text="0"
                            android:textColor="@color/c_ffffff"
                            android:textSize="@dimen/tv_26px" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/me_iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x48"
                    android:src="@mipmap/mine_edit" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x144">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x72"
                android:background="@color/c_269ceb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x8"
                    android:background="@drawable/bg_white_round_angle"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/me_ll_post"
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/me_tv_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/tv_32px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x20"
                            android:text="帖子"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/tv_28px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/me_ll_attention"
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/me_tv_attention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/tv_32px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x20"
                            android:text="关注"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/tv_28px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/me_ll_fans"
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/me_tv_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/tv_32px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x20"
                            android:text="粉丝"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/tv_28px" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x24"
            android:background="@drawable/bg_white_round_angle"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/me_ll_pualsign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_qiand" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1"
                    android:text="每日签到"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_ll_collect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_collect" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1"
                    android:text="我的收藏"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_ll_site"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_site" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1"
                    android:text="收货地址"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@drawable/bg_white_round_angle"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/me_ll_gold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_gold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1"
                    android:text="金币商城"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_ll_shop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_shop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1"
                    android:text="我的渔具店"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_ll_place"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_place" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1"
                    android:text="我的钓场"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_ll_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_message" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="我的消息"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_30px" />
                    <ImageView
                        android:id="@+id/my_iv_mymsgred"
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/x21"
                        android:src="@drawable/red_point"
                        android:layout_marginLeft="@dimen/x24"
                        android:visibility="gone"
                        />
                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x24"
            android:background="@drawable/bg_white_round_angle"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/me_ll_draft"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_draft" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1"
                    android:text="草稿箱"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_ll_set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x45"
                android:paddingRight="@dimen/x24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_set" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1"
                    android:text="设置"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_right" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>