                    android:paddingBottom="@dimen/x24"
                    android:paddingLeft="@dimen/x14"
                    android:paddingRight="@dimen/x14"
                    android:paddingTop="@dimen/x24" />

                <com.project.dyuapp.myviews.GridViewForScrollView
