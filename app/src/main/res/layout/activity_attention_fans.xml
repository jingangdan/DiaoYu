<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AttentionFansActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="@color/c_269ceb">

        <!--返回-->
        <LinearLayout
            android:id="@+id/attention_fans_lv_back"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:padding="@dimen/x24">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/back_click_bg"
                android:src="@mipmap/nav_back" />
        </LinearLayout>

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/attention_fans_xTabLayout"
            android:layout_width="@dimen/x300"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/c_269ceb"
            android:paddingBottom="@dimen/x6"
            app:xTabIndicatorColor="@color/c_ffffff"
            app:xTabIndicatorHeight="@dimen/x6"
            app:xTabIndicatorWidth="@dimen/x40"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="@color/c_ffffff"
            app:xTabTextColor="@color/c_bbd9f6"
            app:xTabTextSize="@dimen/tv_32px"
            app:xTabSelectedTextSize="@dimen/tv_32px"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f1f1f1" />
    <!--可滑动的布局内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/attention_fans_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff" />

</LinearLayout>
