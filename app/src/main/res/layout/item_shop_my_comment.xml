<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f9f9f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x24"
        android:background="@color/c_ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/x24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_shop_comment_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_32px"
                    android:textStyle="bold" />

                <!--<com.project.dyuapp.myviews.StarBarTouch-->
                    <!--android:id="@+id/item_shop_comment_stb_level"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/x24"-->
                    <!--android:clickable="false"-->
                    <!--app:starCount="5"-->
                    <!--app:starDistance="@dimen/x5"-->
                    <!--app:starEmpty="@mipmap/list_star"-->
                    <!--app:starFill="@mipmap/list_star"-->
                    <!--app:starSize="@dimen/x30" />-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/item_shop_ll_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/item_shop_comment_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x36"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="点评时间："
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/tv_26px" />

                <TextView
                    android:id="@+id/item_shop_comment_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/tv_26px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0" />
</LinearLayout>