<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_f9f9f9"
    tools:context="com.project.dyuapp.activity.NewAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:layout_marginTop="@dimen/x24"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <EditText
            android:id="@+id/new_address_edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入姓名"
            android:background="@color/c_ffffff"
            android:layout_marginLeft="@dimen/x80"
            android:textColorHint="@color/c_cccccc"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <EditText
            android:id="@+id/new_address_edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入电话"
            android:numeric="integer"
            android:background="@color/c_ffffff"
            android:layout_marginLeft="@dimen/x50"
            android:textColorHint="@color/c_cccccc"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/new_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收货地址"
            android:gravity="center"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <TextView
            android:id="@+id/new_address_tv_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/new_address_tv"
            android:hint="选择地区"
            android:layout_marginLeft="@dimen/x50"
            android:textColorHint="@color/c_cccccc"
            android:drawableRight="@mipmap/more_right"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0"/>

    <EditText
        android:id="@+id/new_address_edt_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:hint="输入详细地址"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:textColorHint="@color/c_cccccc"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/tv_28px"/>

    <TextView
        android:id="@+id/new_address_tv_save"
        style="@style/btn_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:layout_marginTop="@dimen/x200"
        android:text="保存" />

</LinearLayout>
