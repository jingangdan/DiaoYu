<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_address_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />

            <TextView
                android:id="@+id/item_address_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x48"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_address_tv_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x24"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/x8"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/c_666666"
            android:textSize="@dimen/tv_28px" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_address_ll_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x24"
            android:focusable="false"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_address_iv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_button_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="默认地址"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_address_tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_28px" />

            <TextView
                android:id="@+id/item_address_tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x48"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/c_269ceb"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>