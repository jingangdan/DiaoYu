<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.dyuapp.activity.ChargeTypeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/x24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="野塘"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_32px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x24"
                        android:text="(免费)"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/tv_32px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/charge_type_tv_yetang_free"
                    android:layout_width="@dimen/x128"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginTop="@dimen/x24"
                    android:background="@drawable/bg_gray_round_angle"
                    android:gravity="center"
                    android:padding="@dimen/x12"
                    android:text="免费"
                    android:textSize="@dimen/tv_28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:background="@color/c_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/x24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="斤塘"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_32px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x24"
                        android:text="(按斤收费)"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/tv_32px" />
                </LinearLayout>

                <com.project.dyuapp.myviews.GridViewForScrollView
                    android:id="@+id/charge_type_gv_jintang_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:numColumns="4"
                    android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:background="@color/c_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/x24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天塘"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_32px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x24"
                        android:text="(按天收费)"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/tv_32px" />
                </LinearLayout>

                <com.project.dyuapp.myviews.GridViewForScrollView
                    android:id="@+id/charge_type_gv_tiantang_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:numColumns="4"
                    android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:background="@color/c_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/x24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每小时"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_32px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x24"
                        android:text="(按小时收费)"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/tv_32px" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_charge_type_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginTop="@dimen/x24"
                    android:background="@drawable/bg_click_btn_gray">

                    <EditText
                        android:id="@+id/et_chager_type_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:hint="自定义"
                        android:inputType="number"
                        android:minWidth="@dimen/x128"
                        android:padding="@dimen/x12"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/tv_28px" />
                </RelativeLayout>

                <!--<com.project.dyuapp.myviews.GridViewForScrollView-->
                <!--android:id="@+id/charge_type_gv_time_list"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:divider="@null"-->
                <!--android:numColumns="4"-->
                <!--android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:background="@color/c_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/x24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每杆"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_32px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x24"
                        android:text="(按杆收费)"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/tv_32px" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_charge_type_gan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginTop="@dimen/x24"
                    android:background="@drawable/bg_click_btn_gray">

                    <EditText
                        android:id="@+id/et_chager_type_gan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:hint="自定义"
                        android:inputType="number"
                        android:minWidth="@dimen/x128"
                        android:padding="@dimen/x12"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/tv_28px" />
                </RelativeLayout>

                <!--<com.project.dyuapp.myviews.GridViewForScrollView-->
                    <!--android:id="@+id/charge_type_gv_gan_list"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:divider="@null"-->
                    <!--android:numColumns="4"-->
                    <!--android:scrollbars="none"></com.project.dyuapp.myviews.GridViewForScrollView>-->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
