<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_gold_mall_iv"
        android:layout_width="@dimen/x356"
        android:layout_height="@dimen/x356"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/mine_img"/>

    <LinearLayout
        android:layout_width="@dimen/x356"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_line_gray"
        android:layout_gravity="center"
        android:paddingTop="@dimen/x18"
        android:paddingLeft="@dimen/x18"
        android:paddingRight="@dimen/x18"
        android:paddingBottom="@dimen/x24"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_gold_mall_tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_gravity="center"
            android:text=""
            android:maxLines="2"
            android:textStyle="normal"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/x8"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x16">

            <TextView
                android:id="@+id/item_gold_mall_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/c_e64969"
                android:textSize="@dimen/tv_30px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币"
                android:textColor="@color/c_e64969"
                android:textSize="@dimen/tv_30px"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>