<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_f9f9f9"
    android:scrollbars="none"
    tools:context="com.project.dyuapp.activity.RecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x98"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:gravity="center_vertical"
            android:background="@color/c_ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已兑换："
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_30px"/>

            <TextView
                android:id="@+id/record_tv_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/c_f44e4e"
                android:textSize="@dimen/tv_30px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币"
                android:textColor="@color/c_f44e4e"
                android:textSize="@dimen/tv_30px"/>

        </LinearLayout>

        <com.project.dyuapp.myviews.ListViewForScrollView
            android:id="@+id/record_lvsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x24"
            android:divider="@color/c_f9f9f9"
            android:dividerHeight="@dimen/x24"
            android:scrollbars="none">

        </com.project.dyuapp.myviews.ListViewForScrollView>

    </LinearLayout>

</ScrollView>
