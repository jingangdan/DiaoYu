<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f0f0f0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择性别"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px" />

        <TextView
            android:id="@+id/pop_sex_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/x24"
            android:text="完成"
            android:textColor="@color/c_269ceb"
            android:textSize="@dimen/tv_28px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:paddingTop="@dimen/x32"
        android:paddingBottom="@dimen/x32">

        <com.project.dyuapp.myviews.CycleWheelView
            android:id="@+id/pop_sex_cwv_sex"
            android:layout_width="@dimen/x200"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x12"
            android:layout_marginLeft="@dimen/x12">

        </com.project.dyuapp.myviews.CycleWheelView>

    </RelativeLayout>

</LinearLayout>