<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x24"
        android:minHeight="@dimen/x180"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_fishing_friends_result_img_icon"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x180"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/mine_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_fishing_friends_result_img_icon"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x24"
            android:layout_toRightOf="@+id/item_fishing_friends_result_img_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_fishing_friends_result_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_32px" />

            <TextView
                android:id="@+id/item_fishing_friends_result_tv_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_999999"
                android:textSize="@dimen/tv_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/item_fishing_friends_result_tv_recommend"
                        android:layout_width="@dimen/x66"
                        android:layout_height="@dimen/x34"
                        android:background="@drawable/bg_red_round"
                        android:gravity="center"
                        android:text="推荐"
                        android:visibility="gone"
                        android:textColor="@color/c_f44e4e"
                        android:textSize="@dimen/tv_22px"
                        app:layout_auto_basewidth="height" />

                    <TextView
                        android:id="@+id/item_fishing_friends_result_tv_boutique"
                        android:layout_width="@dimen/x66"
                        android:layout_height="@dimen/x34"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"
                        android:background="@drawable/bg_orange_round"
                        android:gravity="center"
                        android:text="精品"
                        android:visibility="gone"
                        android:textColor="@color/c_eb8542"
                        android:textSize="@dimen/tv_22px"
                        app:layout_auto_basewidth="height" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical|right">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/item_fishing_friends_result_pimg_head"
                        android:layout_width="@dimen/x48"
                        android:layout_height="@dimen/x48"
                        android:layout_gravity="right"
                        android:src="@mipmap/mine_edit_head"
                        app:layout_auto_basewidth="height"
                        app:siShape="@drawable/shape_circle"
                        app:siSquare="true" />

                    <TextView
                        android:id="@+id/item_fishing_friends_result_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x24"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/tv_26px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/c_f0f0f0" />
</LinearLayout>

