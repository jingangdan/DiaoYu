<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff"
    tools:context="com.project.dyuapp.activity.MyCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/x24"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/my_code_iv_head"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            app:siShape="@drawable/shape_circle"
            android:src="@mipmap/mine_edit_head"
            app:siSquare="true"/>

        <TextView
            android:id="@+id/my_code_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_30px" />

        <TextView
            android:id="@+id/my_code_tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/bg_orange_round_angle"
            android:padding="@dimen/x4"
            android:text="Lv."
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/tv_24px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x100"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_code_iv"
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/x500"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用钓鱼吧APP扫描二维码，关注我"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x48"
            android:textSize="@dimen/tv_26px"
            android:textColor="@color/c_666666"/>

    </LinearLayout>

</LinearLayout>
