<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <TextView
            android:id="@+id/item_record_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="兑换时间:"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_26px"/>

        <TextView
            android:id="@+id/item_record_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            android:layout_toRightOf="@+id/item_record_tv_time"
            android:text=""
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_26px"/>

        <TextView
            android:id="@+id/item_record_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="状态"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_26px"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_gravity="center"
        android:background="@color/c_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x24">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/item_record_iv"
            android:layout_width="@dimen/x224"
            android:layout_height="@dimen/x224"
            app:siShape="@drawable/shape_rounded_rectangle1"
            android:src="@mipmap/mine_img"
            app:siSquare="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_record_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/x8"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_30px"
                android:text=""/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x60">

                <TextView
                    android:id="@+id/item_record_tv_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_e64969"
                    android:textSize="@dimen/tv_28px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金币"
                    android:textColor="@color/c_e64969"
                    android:textSize="@dimen/tv_28px"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="数量:"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_28px"/>

                    <TextView
                        android:id="@+id/item_record_tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/x8"
                        android:text=""
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_28px"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>