<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x412"
    android:layout_marginBottom="@dimen/x24"
    android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fans_main_pager_header_ll"
            android:layout_marginTop="@dimen/x24"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fans_main_pager_header_civ_head"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/x144"
                android:layout_marginBottom="@dimen/x12"
                app:civ_border_color="@color/c_ffffff"
                app:civ_border_width="@dimen/x4" />
            <!--昵称-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/x12">

                <TextView
                    android:id="@+id/fans_main_pager_header_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x24"
                    android:text=""
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/tv_32px" />

                <TextView
                    android:id="@+id/fans_main_pager_header_tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_grade_round"
                    android:paddingLeft="@dimen/x4"
                    android:paddingRight="@dimen/x4"
                    android:text="Lv."
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/tv_22px" />
            </LinearLayout>

            <TextView
                android:id="@+id/fans_main_pager_header_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帖子:   关注:    粉丝:"
                android:textColor="#ffeeeeee"
                android:textSize="@dimen/tv_28px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fans_main_pager_header_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x96"
            android:layout_alignParentBottom="true"
            android:background="#2f000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fans_main_pager_header_tv_attend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已关注"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/tv_32px" />

            <TextView
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x44"
                android:layout_gravity="center_vertical"
                android:background="@color/c_f0f0f0" />

            <TextView
                android:id="@+id/fans_main_pager_header_tv_send_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发私信"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/tv_32px" />
        </LinearLayout>
    </RelativeLayout>