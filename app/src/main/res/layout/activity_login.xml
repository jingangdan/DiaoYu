<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:layout_marginTop="@dimen/x140"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginTop="@dimen/x80"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x96"
            android:gravity="bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x24"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:src="@mipmap/sign_user" />

            <EditText
                android:id="@+id/login_edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:paddingBottom="@dimen/x24"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_cccccc"
                android:textSize="@dimen/tv_32px" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/c_888888" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x96"
            android:layout_marginTop="@dimen/x20">

            <ImageView
                android:id="@+id/login_iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x24"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:src="@mipmap/sign_password" />

            <EditText
                android:id="@+id/login_edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/login_tv_forget_password"
                android:layout_toRightOf="@+id/login_iv_password"
                android:background="@android:color/transparent"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/x24"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_cccccc"
                android:textSize="@dimen/tv_32px" />

            <TextView
                android:id="@+id/login_tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="忘记密码？"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_28px" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/c_888888" />

        <TextView
            android:id="@+id/login_tv_login"
            style="@style/btn_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_marginTop="@dimen/x60"
            android:text="登录" />

        <TextView
            android:id="@+id/login_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center_vertical"
            android:padding="@dimen/x24"
            android:text="注册"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_32px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x40"
            android:drawablePadding="@dimen/x16"
            android:drawableTop="@mipmap/sign_qq"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_32px" />

        <TextView
            android:id="@+id/login_tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x40"
            android:drawablePadding="@dimen/x16"
            android:drawableTop="@mipmap/sign_weixin"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_32px" />
    </LinearLayout>
</LinearLayout>
