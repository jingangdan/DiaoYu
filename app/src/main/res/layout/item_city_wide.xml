<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:gravity="center"
    android:paddingTop="@dimen/x32"
    android:paddingBottom="@dimen/x32"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/city_wide_iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x24"
        android:src="@mipmap/find_friend" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city_wide_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x12"
            android:text="同城钓友"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_32px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/city_wide_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共有位钓友"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/tv_28px" />

    </LinearLayout>

</LinearLayout>