<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/x48"
        android:paddingRight="@dimen/x48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_grade_rule_tv_grade"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <TextView
            android:id="@+id/item_grade_rule_tv_honor"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="新手上路"
            android:gravity="center"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <TextView
            android:id="@+id/item_grade_rule_tv_need"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="50"
            android:gravity="center"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

        <TextView
            android:id="@+id/item_grade_rule_tv_gold"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="+5"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"/>

    </LinearLayout>

</LinearLayout>