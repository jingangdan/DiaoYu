<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x500"
    android:layout_height="@dimen/x200"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_round_angle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x46"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/c_333333"
        android:textSize="@dimen/tv_36px" />

    <TextView
        style="@style/line"
        android:layout_above="@+id/ll_bottom" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_30px" />

        <TextView
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/c_f0f0f0" />

        <TextView
            android:id="@+id/dialog_tv_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_ffffff"
            android:gravity="center"
            android:text="呼叫"
            android:textColor="@color/c_269ceb"
            android:textSize="@dimen/tv_30px" />
    </LinearLayout>

</RelativeLayout>