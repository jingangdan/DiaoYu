<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/x24"
    android:background="@color/c_ffffff">
    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/myletter_iv_head"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@mipmap/mine_edit_head"
        app:siShape="@drawable/shape_circle"
        app:siSquare="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x24">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/myletter_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tv_32px"
                android:textColor="@color/c_333333"
                android:layout_toLeftOf="@+id/myletter_tv_delete"
                android:layout_marginRight="@dimen/x24"/>
            <TextView
                android:id="@+id/myletter_tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="删除"
                android:textColor="@color/c_269ceb"
                android:textSize="@dimen/tv_28px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/myletter_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/tv_24px"
            android:textColor="@color/c_999999"
            android:layout_marginTop="@dimen/x4"/>
        <TextView
            android:id="@+id/myletter_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_28px"
            android:layout_marginTop="@dimen/x30"/>
    </LinearLayout>

</LinearLayout>