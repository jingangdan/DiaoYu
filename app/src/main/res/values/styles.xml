<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--隐藏ActionBar-->
        <item name="windowActionBar">false</item>
        <!--隐藏标题-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--隐藏ActionBar-->
        <item name="windowActionBar">false</item>
        <!--隐藏标题-->
        <item name="windowNoTitle">true</item>
    </style>
    <!--发布界面 透明背景的Activity-->
    <style name="NoTitleTranslucentTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--弹出框 进入 退出 动画-->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <!--弹出框 主题-->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 去掉dialog标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置是否悬浮 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="style_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 去掉dialog标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置是否悬浮 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--   将dialog背景色置为透明   -->
        <!--<item name="android:windowBackground">@android:color/white</item>-->
    </style>

    <!--蓝色按钮-->
    <style name="btn_blue">
        <item name="android:background">@drawable/bg_click_btn_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tv_32px</item>
    </style>
    <!--分割线-->
    <style name="line">
        <item name="android:background">@color/c_f0f0f0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x1</item>
    </style>
    <!--宽分割线-->
    <style name="line_wide">
        <item name="android:background">@color/c_f9f9f9</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x24</item>
    </style>
    <!--图-->
    <style name="pic">
        <item name="android:src">@mipmap/mine_img</item>
        <item name="android:layout_width">@dimen/x240</item>
        <item name="android:layout_height">@dimen/x180</item>
    </style>
    <!--等级-->
    <style name="grade">
        <item name="android:background">@drawable/bg_grade_round</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/x4</item>
        <item name="android:paddingRight">@dimen/x4</item>
        <item name="android:paddingTop">@dimen/x2</item>
        <item name="android:paddingBottom">@dimen/x2</item>
        <item name="android:textColor">@color/c_ffffff</item>
        <item name="android:textSize">@dimen/tv_22px</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/c_999999</item>
        <item name="colorControlActivated">@color/c_999999</item>
    </style>

    <!--等待框-->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
